<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/appearance_header">

        <ListPreference
            app:defaultValue="use_device_theme"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme"
            app:title="@string/theme_preference_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/high_scores">

        <Preference
            app:key="clear_high_scores"
            app:title="@string/clear_high_scores_preference_title" />
    </PreferenceCategory>

</PreferenceScreen>